<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="6"
        app:rowCount="5">

        <Button
            android:id="@+id/itemClear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="C"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/itemBracket"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="()"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/modulo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="%"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/devision"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="7"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="8"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="9"
            app:layout_row="1"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="*"
            app:layout_row="1"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="6"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="5"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="4"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="-"
            app:layout_row="2"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="3"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="2"
            app:layout_row="3"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="1"
            app:layout_row="3"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="+"
            app:layout_row="3"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />


        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="0"
            app:layout_row="4"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />
        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="."
            app:layout_row="4"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/orange"
            android:text="="
            app:layout_row="4"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>